<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<section>
    <% if (cohort) {%>
        <form action="/cohorts/<%= cohort.id %>" method="POST">
        <div class="form-group" >
            <label for="inputURL"> Logo URL</label>
            <input type="text" name="imgUrl" class="form-control" id="exampleInputEmail" value="<%= cohort.imgUrl%> ">
        </div>
        <div class="form-group">
            <label for="inputCohortName">Name</label>
            <input type="text" name="cohortName" class="form-control" id="inputCohortName" value="<%= cohort.cohortName%> ">
        </div>
        <div class="form-group">
            <label for="inputMember">Members</label>
            <textarea name="members" id="inputMembers" class="form-control" rows="9"><%= cohort.members.join(',') %> </textarea>
        </div>
        <input type="hidden" name="__method" value="PATCH">
        <input type="submit" class="btn btn-link border-primary float-right text-primary" value="Submit">
        </form> 
        <% } else { %>
            <h2 class="h2"> No Cohort Found</h2>
            <% } %> 
</section>  
<%- include('../partials/footer') %> 