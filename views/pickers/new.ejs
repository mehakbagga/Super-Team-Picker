<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<section>
    <% if (cohort) {%>
        <form action="/cohorts/new" method="POST">
        <div class="form-group" >
            <label for="inputURL"> Logo URL</label>
            <input type="text" name="imgUrl" class="form-control" id="exampleInputEmail" placeholder="e.g https://example.com/some.png">
        </div>
        <div class="form-group">
            <label for="inputCohortName">Name</label>
            <input type="text" name="cohortName" class="form-control" id="inputCohortName" placeholder="Flying Funks">
        </div>
        <div class="form-group">
            <label for="inputMember">Members</label>
            <textarea name="members" id="inputMembers" class="form-control" rows="9" placeholder="Jon Snow, Daenerys, Melisendre, Arya Stark"> </textarea>
        </div>
        <input type="submit" class="btn btn-link border-primary float-right text-primary" value="Submit">
        </form> 
        <% } else { %>
            <h2 class="h2"> No Cohort Found</h2>
            <% } %> 
</section>  
<%- include('../partials/footer') %> 